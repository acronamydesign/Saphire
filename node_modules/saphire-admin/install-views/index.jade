include partials/common/head/head.jade

-var steps = [{step:"language and timezone",qstring:"language-and-timezone"},{step:"site metadata",qstring:"site-metadata"},{step:"your accont",qstring:"your-accont"},{step:"all done",qstring:"all-done"}]

ul.well.clearfix
	for step in steps
		li(data-step= step.qstring).col-md-3.text-center.text-muted= step.step
form(action="/setup" method="post")
	div.container.jumbotron
		h1 Welcome to Saphire, Lets go.
		a(href="?step=language-and-timezone")
			button.btn.btn-primary Create Website

	div.container
		div
			div.clearfix.col-md-6
				div.form-horizontal
					fieldset
						legend language and timezone
						//include ./partials/form/world-map.jade

						div.form-group
							label.col-md-2.text-muted Location
							div.col-md-10
								input.form-control(placeholder="Location" name="location")

						div.form-group
							label.col-md-2.text-muted Timezone
							div.col-md-10
								include ./partials/form/timezone.jade

						div.form-group
							label.col-md-2.text-muted Language
							div.col-md-10
								include ./partials/form/language.jade

				div.clearfix
					small not done
					a(href="?step=site-metadata")
						button.btn.btn-primary.pull-right Next

	div.container
		div
			div.clearfix.col-md-6
				div.form-horizontal
					fieldset
						legend About this site
						//include ./partials/form/world-map.jade
						div.form-group
							label.col-md-2.text-muted Site name
							div.col-md-10
								input.form-control(placeholder="Site name" name="sitename")

						div.form-group
							label.col-md-2.text-muted About
							div.col-md-10
								textarea.form-control(name="about")

				div.clearfix
					small not done
					a(href="?step=your-account")
						button.btn.btn-primary.pull-right Next

	div.container
		div
			div.clearfix.col-md-6
				div.form-horizontal
					fieldset
						legend Your Account
						//include ./partials/form/world-map.jade

						div.form-group
							label.col-md-2.text-muted name
							div.col-md-10
								input.form-control(required placeholder="name" name="realname")

						div.form-group
							label.col-md-2.text-muted username
							div.col-md-10
								input.form-control(required placeholder="username" name="username")

						div.form-group
							label.col-md-2.text-muted password
							div.col-md-10
								input.form-control(required type="password" placeholder="password" name="password")
				div.clearfix
					small not done
					a(href="?step=done")
						button(type="submit").btn.btn-primary.pull-right Next

div.container
	h1 Install compleated
	p Have you tried turning it off an on again?
	b please restart your node server to start using your new saphire website

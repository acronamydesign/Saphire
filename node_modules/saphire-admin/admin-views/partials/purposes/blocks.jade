div.panel.clearfix
	div.panel-body.col-md-6
		a(href="create/block")
			button.btn.btn-default Create Block

	div.panel-body.col-md-3.col-md-offset-3
		input.form-control(type="search" placeholder="filter region")

form
	div.well
		-for(regions in availableRegions){
			div.clearfix
				h4.text-muted.pull-left= availableRegions[regions].friendlyName
				a.pull-right Change
			div
				ul.list-group
					-for(blocks in availableRegions[regions]["blocks"]){
						li.list-group-item= availableRegions[regions]["blocks"][blocks]["title"]
							span.text-muted= availableRegions[regions]["blocks"][blocks]["machineName"]
							- var editLink = "regions/edit/block/"+ availableRegions[regions]["blocks"][blocks]["machineName"]
							a(href=editLink).pull-right Edit
					-}
		-}

	footer.panel.clearfix
		div.panel-body.col-md-6
			button.btn.btn-default cancel
		div.panel-body.col-md-6
			button.btn.btn-primary.pull-right(type="submit") Save

div
= inspect(availableRegions["nav"]["blocks"])
div
